header.header
	.header__top
		.container
			.header__left
					-var icons = ['fb','vk','tw']
					ul.socials
						each icon in icons
							li(class="socials__item socials__item_" + icon)
								a(href="#").socials__link
									.socials__icon
			.header__right
				.adress ул. Маяковская 6, офис 17
				a(href='tel:+7(921)123-12-13').phone +7 (921) 123-12-13
	.header__bottom
			.container
				a(href='#').logo
					img(src='img/logo/cooltech.png' alt='logo COOLTECH').logo__img
					span.logo__descr COOLTECH
				.search
					form.search__form
						input(type='search' name='search' class='search__form-input' placeholder='Что будем искать')
						input(type='submit' name='submit' class='search__form-submit' value='Найти')
				.menu
					-var items = ['Карта проезда','История заказов', 'Корзина']
					ul.menu__list
						each item in items
							li.menu__item
								a(href="#").menu__link= item